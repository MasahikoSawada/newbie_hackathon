+				log_min_duration = -1;
+			else if (avopts->log_min_duration == -1)
+				log_min_duration = Log_autovacuum_min_duration;
+			else if (avopts->log_min_duration >= 0)
+				log_min_duration = avopts->log_min_duration;
+		}
+
 		/* these do not have autovacuum-specific settings */
